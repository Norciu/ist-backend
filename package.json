{
  "name": "ist-backend",
  "version": "1.0.0",
  "description": "Backend of IST",
  "main": "dist/index.js",
  "scripts": {
    "start": "node -r source-map-support/register .",
    "start:dev": "nodemon src/index.ts"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/",
      "dist/",
      "coverage/"
    ],
    "watch": [
      "src/"
    ],
    "execMap": {
      "ts": "node -r ts-node/register"
    },
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js,json,ts"
  },
  "author": "Norbert Czubin",
  "license": "MIT",
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/node": "^14.14.10",
    "@types/yargs": "^15.0.11",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.15.0",
    "fastify-decorators": "^3.6.0",
    "gulp": "^4.0.2",
    "nodemon": "^2.0.6",
    "sequelize-cli": "^6.2.0",
    "ts-node": "^9.1.0",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "dotenv": "^8.2.0",
    "fastify": "^3.9.1",
    "fastify-cookie": "^4.1.1",
    "fastify-csrf": "^2.0.0",
    "fastify-jwt": "^2.1.3",
    "pg": "^8.5.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.3.5",
    "yargs": "^16.2.0"
  }
}
